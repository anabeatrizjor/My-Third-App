<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/dark_grey"
            android:padding="50dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="32dp"
                android:text="Login"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:id="@+id/userInputLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:layout_marginTop="5dp"
                android:hint="Usuário"
                android:fontFamily="@font/poppins_semibold"
                android:paddingLeft="16dp"
                android:background="@drawable/border_selector"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/senhaInputLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/userInputLogin"
                android:layout_marginTop="16dp"
                android:hint="Senha"
                android:fontFamily="@font/poppins_semibold"
                android:paddingLeft="16dp"
                android:background="@drawable/border_selector"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/loginBtnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/senhaInputLogin"
                android:layout_marginTop="24dp"
                android:text="Login"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/poppins_semibold"/>
            <Button
                android:id="@+id/cadastroBtnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginBtnLogin"
                android:layout_marginTop="10dp"
                android:text="Ainda não tenho uma conta"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/poppins_semibold"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
